<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="arturoki.myke.MainActivity"
    android:gravity="right|fill_horizontal"
    android:onClick="rojo"
    tools:ignore="RtlHardcoded">
<!--NO TE MOLESTES EN SEGUIR VIENDO ESTO, ESTA DESECHADO Y NO SE VE EN LA APP -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:text="@string/pincha_en_la_imagen_para_elegir_color_de_teclado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />

            <Button
                android:text="Rojo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:onClick="rojo" />

            <Button
                android:text="Blanco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:onClick="blanco" />

            <TextView
                android:text="@string/puedes_probar_el_teclado_aqui_abajo_pincha_en_la_caja_y_en_el_icono_que_te_aparecer_arriba_donde_el_wifi_y_demas_le_das_al_de_teclado_obvio_si_no_te_aparece_myke_dale_a_seleccione_mas_al_menos_en_mi_caso_es_asi_y_le_das_despues_vuelves_a_dar_al_mismo_icono_y_ya_te_aparecer_myke_como_teclado_eso_si_te_avisar_de_que_la_aplicaci_n_recoger_todo_lo_que_escribas_aunque_es_un_poco_raro_es_obvio_es_un_teclado_xd_recoge_todo_lo_que_escribes_pero_digo_esto_que_no_va_ningun_dato_a_ningun_servidor_externo_palabrita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/editText"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="54dp" />

            <!--  <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="☭" />-->
        </LinearLayout>
    </ScrollView>

    <!--  android:text="\u00A9" />-->
</RelativeLayout>
